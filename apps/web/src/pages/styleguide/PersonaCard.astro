<!-- Persona Card START -->
<style>
  .card {
    border-radius: .75rem;
  }
</style>
<div class="card overflow-hidden" style="max-width: 18rem;">
  <!-- Cover image -->
  <style>
    .h-50px {
      height: 55px !important;
    }
    .cover-img {
      background-color: #0070f3;
    }
  </style>
  <div class="h-50px cover-img" style="background-image:url(assets/images/bg/01.jpg); background-position: center; background-size: cover; background-repeat: no-repeat;"></div>
    <!-- Card body START -->
    <div class="card-body pt-0">
      <!-- Avatar -->
      <div class="text-center">
        <style>
          .avatar-lg {
            height: 4rem;
            width: 4rem;
          }
          .avatar {
            height: 4rem;
            width: 4rem;
            position: relative;
            display: inline-block;
            -ms-flex-negative: 0 !important;
            flex-shrink: 0 !important;
            
          }
          .avatar-img {
            width: 100%;
            height: 100%;
            -o-object-fit: cover;
            object-fit: cover;
            color: #fff;
            border-radius: 0.85rem;
            transition: all .2s ease-in-out;
          }
          .mt-n5 {
            margin-top: -3rem !important;
          }
        </style>
        <div class="avatar avatar-lg mt-n5 mb-3">
          <a href="#!"><img class="avatar-img border shadow border-white border-3" src="assets/img/profile-336x336.jpg" alt=""></a>
        </div>
      </div>
      <!-- Info -->
      <div class="text-center">
        <style>
          h6, .h6, h5, .h5, h4, .h4, h3, .h3, h2, .h2, h1, .h1 {
            margin-top: 0;
            margin-bottom: 0.5rem;
            /* font-family: "Noto Sans", sans-serif; */
            font-weight: 900;
            line-height: 1.25;
            color: #14191e;
          }
          h1 > a, h2 > a, h3 > a, h4 > a, h5 > a, h6 > a, .h1 > a, .h2 > a, .h3 > a, .h4 > a, .h5 > a, .h6 > a {
            color: #14191e;
            text-decoration: none;
          }
          h5, .h5 {
            font-size: 1.171875rem;
          }
          /* .persona-title {} */
          
        </style>
        <h5 class="mb-0 persona-title"> <a href="#!">Software Engineer</a> </h5>
        <small>Persona</small>
        <p class="mt-3 ">I'd love to change the world, but they wonâ€™t give me the source code.</p>
        

      </div>
      <!-- Divider -->
      <hr>
      <!-- Persona Tags START -->
      <div class="text-center">
        <p class="fw-bold">I've done</p>
        <p class="">
          <a href="#" class="action-link">#coded</a>,
          <a href="#" class="action-link">#documented</a>,
          <a href="#" class="action-link">#reviewed</a>,
          <a href="#" class="action-link">#launched</a>,
          <a href="#" class="action-link">#been-recruited</a>
        </p>
      </div>
      <!-- Persona Tags END -->
      <!-- Divider -->
      <hr>
      <!-- Persona Currently START -->
      <div class="text-center">
        <p class="fw-bold">Currently</p>
        <ul class="d-block list-unstyled">
          <li>Open for work</li>
          <li>Building personas</li>
          <li>Learning astro</li>
        </ul>
      </div>
      <!-- Persona Currently END -->
    </div>
    <!-- Card body END -->
</div>
<!-- Persona Card END -->