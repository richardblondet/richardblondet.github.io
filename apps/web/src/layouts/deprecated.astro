---
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html class="no-js" lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">

        <!-- General -->
        <meta name="description" content="My name is Richard. I help people do better by creating apps or experiences that improve their line of work. Always open for new opportunities." />
        <meta name="keywords" content="Richard Blondet, richardblondet, @richardblondet, Web Developer, Frontend Developer, Backend Developer, developer from santo domingo, consulting developer, entrepreneur, growth web engineer, digital marketing, digital marketing developer" />
        <meta name="revisit-after" content="1 day">
        <link rel="author" href="https://www.linkedin.com/in/richardblondet/" />
        
        <!-- Open Graph -->
        <meta property="og:title" content="Hi, my name is Richard" />
        <meta property="og:description" content="I help people do better by creating apps or experiences that improve their line of work."/>
        <meta property="og:type" content="website" />
        <meta property="og:url" content="http://richardblondet.com/" />
        <meta property="og:image" content="http://richardblondet.com/assets/img/profile-336x336.jpg" />

        <!-- Twitter Summary -->
        <meta name="twitter:card" content="summary" />
        <meta name="twitter:site" content="@richardblondet" />
        <meta name="twitter:title" content="Hi, my name is Richard." />
        <meta name="twitter:description" content="I help people do better by creating apps or experiences that improve their line of work." />

        <meta name="generator" content={Astro.generator} />
        <title>Richard Blondet's {title}</title>

        <!-- Favicons - add your favicons here
        ============================================= -->
        <link rel="shortcut icon" href="assets/img/other/favicon-32x32.png" type="image/x-icon">
        <link rel="apple-touch-icon" sizes="57x57" href="assets/img/other/apple-icon-57x57.png">
        <link rel="apple-touch-icon" sizes="72x72" href="assets/img/other/apple-icon-72x72.png">
        <link rel="apple-touch-icon" sizes="114x114" href="assets/img/other/apple-icon-144x144.png">
        
        <!-- CSS Stylesheets 
            ============================================= -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,900" rel="stylesheet">
        <link rel="stylesheet" href="assets/css/style.css">
    </head>

    <body>
        <slot />
    </body>
</html>