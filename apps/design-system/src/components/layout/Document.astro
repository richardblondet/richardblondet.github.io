---
export interface Props {
  bodyClassNames?: string;
};
const currentPage = new URL(Astro.url.pathname, Astro.site).pathname;
---

<!DOCTYPE html>
<html lang="en" class="initial">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <link rel="canonical" href={currentPage}>
        
        <!-- Load default assests -->
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <!-- Preload Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital@0;1&display=swap" rel="stylesheet" />
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@200;400;700;900&display=swap" rel="stylesheet">


        <slot name="dark-mode-controller">
          <!-- This is intentionally inlined to avoid FOUC -->
          <script is:inline>
              const root = document.documentElement;
              const theme = localStorage.getItem('theme');
              if (theme === 'dark' || (!theme && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
                  root.classList.add('dark');
              } else {
                  root.classList.remove('dark');
              }
          </script>
        </slot>

        <!-- Include Globals -->
        <style is:global>
          .astro-code {
            box-shadow: 0 2px 2px rgba(0,0,0,.06);
          }
        </style>

        <!--  children with the `slot="document-head"` attribute will go here -->
        <slot name="document-head" />
    </head>

    <slot />      
</html>

