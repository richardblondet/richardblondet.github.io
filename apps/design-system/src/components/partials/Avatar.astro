---
import { avatar } from '../../style/sheet';
export interface Props {
  size: number;
  type: string;
  src: string;
  withShadow?: boolean;
  border?: number;
};
const { 
  size = 16, 
  type = "rounded", 
  src = "/profile-picture.jpeg", 
  withShadow,
  border
} = Astro.props;

const avatarClassName = avatar({ 
  type, 
  withShadow,
  border,
  css: {
  width: `$${size}`,
  height: `$${size}`,
}}).className;
---
<img class={avatarClassName} src={src} alt="Avatar Partial" />
