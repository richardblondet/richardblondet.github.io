---
import { avatar, CssAvatarVariants } from '../../style/sheet';
export interface Props {
  size?: CssAvatarVariants['size'];
  type?: CssAvatarVariants['type'];
  src?: string;
  withShadow?: CssAvatarVariants['withShadow'];
  border?: CssAvatarVariants['border'];
  alt?: string;
};
const { 
  size = 'md', 
  type = 'rounded', 
  src  = '/profile-picture.jpeg', 
  withShadow = false,
  border = 1,
  alt = "Avatar Partial"
} = Astro.props;

const { className } = avatar({ 
  type, 
  withShadow,
  border,
  size,
});
---
<img class={className} src={src} alt={alt} />
